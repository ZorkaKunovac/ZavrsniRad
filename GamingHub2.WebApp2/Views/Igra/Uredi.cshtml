@model GamingHub2.Model.Requests.IgraUpsertRequest

@{
    ViewData["Title"] = "Dodaj";
}

<h4>Uredi igru</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Uredi" asp-controller="Igra" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Id" readonly hidden class="control-label"></label>
            <input asp-for="Id" readonly hidden class="form-control" />*@
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Developer" class="control-label"></label>
                <input asp-for="Developer" class="form-control" />
                <span asp-validation-for="Developer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Izdavac" class="control-label"></label>
                <input asp-for="Izdavac" class="form-control" />
                <span asp-validation-for="Izdavac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumIzlaska" class="control-label"></label>
                <input asp-for="DatumIzlaska" class="form-control" />
                <span asp-validation-for="DatumIzlaska" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="stringSlika" class="control-label"></label><br />
                @if (!string.IsNullOrEmpty(Model.stringSlika))
                {
                    <img src="@Model.stringSlika" style="max-width:100px; max-height:100px" />
                }
                <input asp-for="stringSlika" type="file" name="file" id="file" />
                <span asp-validation-for="stringSlika" class="text-danger"></span>
            </div>

            <div>
                @for (int i = 0; i < Model.CheckBox.Count; i++)
                {
                    <input asp-for="@Model.CheckBox[i].IsChecked" type="checkbox" />
                    <label asp-for="@Model.CheckBox[i].Text">@Model.CheckBox[i].Text</label>
                    <input type="hidden" asp-for="@Model.CheckBox[i].KonzolaId" />
                }
            </div>

            <div class="form-group">
                <div class="dugmad">
                    <input type="submit" value="Snimi" class="dugme-read">  <a asp-action="Index" type="button" class="dugme-read dugme-cancel">Odustani</a>
                </div>
            </div>
        </form>
    </div>
</div>

