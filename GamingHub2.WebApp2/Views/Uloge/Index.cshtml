@model IEnumerable<GamingHub2.Model.Uloge>

@{
    ViewData["Title"] = "Upravljanje ulogama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <style>
        #sredisnjisadrzaj {
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            padding: 3% 7%;
            max-width: 100%;
            background-image: url("../img/grey-background.png");
            background-size: cover;
        }

        html {
            background-size: cover;
            /* background: #4c4c4c; */
            background-image: url(../img/dark-wallpaper.jpg);
        }
    </style>
</head>

<body>

    <h1>Upravljanje ulogama</h1>

    <form style="width:60%;" method="post" asp-action="AddRole" asp-controller="Uloge">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-group">
            <input name="roleName" class="form-control w-25">
            <span class="input-group-btn">
                <button class="btn btn-secondary">Dodaj Ulogu</button>
            </span>
        </div>
    </form>

    <table class="table  table-dark table-striped" style="width:60%;" >
        <thead>
            <tr>
                <th>Uloga</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Naziv</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
