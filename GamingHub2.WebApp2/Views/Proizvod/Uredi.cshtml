@model GamingHub2.Model.Requests.ProizvodUpdateRequest

@{
    ViewData["Title"] = "Uredi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #sredisnjisadrzaj {
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        padding: 3% 7%;
        max-width: 100%;
        background-image: url("../img/dark-wallpaper.jpg");
        background-size: cover;
    }

    html {
        background-size: cover;
        background: #4c4c4c;
        background-image: url(../img/dark-wallpaper.jpg);
    }
</style>

<h4>Uredjivanje proizvoda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Uredi" asp-controller="Proizvod" asp-route-id="@ViewBag.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NazivProizvoda" class="control-label"></label>
                <input asp-for="NazivProizvoda" readonly class="form-control" />
                <span asp-validation-for="NazivProizvoda" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProdajnaCijena" class="control-label"></label>
                <input asp-for="ProdajnaCijena" class="form-control" />
                <span asp-validation-for="ProdajnaCijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Popust" class="control-label"></label>
                <input asp-for="Popust" class="form-control" />
                <span asp-validation-for="Popust" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @Html.CheckBoxFor(m => m.Status)
                <span asp-validation-for="Popust" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="dugmad">
                    <input type="submit" value="Snimi" class="dugme-read">  <a asp-action="Index" type="button" class="dugme-read dugme-cancel">Odustani</a>
                </div>
            </div>
        </form>
    </div>
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
